@model IEnumerable<BookTable.Models.DatabaseModels.Table>

@{
    ViewBag.Title = "My Tables";
}

@if (Model.Count() > 0)
{

    <div class="ml-auto mr-auto" style="width:50%">
        <h2>My Tables</h2>


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Seats)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seats)
                    </td>
                    <td style="text-align:end">
                        <a class="btn btn-secondary" href="/Tables/Edit/@item.TableId">Edit</a>
                        <a data-toggle="modal" data-target="#exampleModal" class="btn btn-danger text-white">Delete</a>
                    </td>
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Your table wiil be deleted</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <h6>Are you sure that you want to delete your table?</h6>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <a class="btn btn-danger" href="/Tables/Delete/@item.TableId">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </table>
        <div class="mb-5">
            <a href="/Restaurants/Details/@ViewBag.RestId"><button type="button" class="btn btn-secondary">Back</button></a>
            <a href="/Tables/createTableForRestaurant/@ViewBag.RestId"><button type="button" class="btn btn-success">New Table</button></a>
        </div>
    </div>
}
else
{
    <div style="text-align:center" class="mb-5">
        <div>
            <h4 style="color:gray">There are no tables added!</h4>
            <p style="color:gray">Please add your tables for restaurant</p>
            <img style="width:20%" src="https://www.stickpng.com/assets/thumbs/584f07ef6a5ae41a83ddee55.png">
        </div>
        <a href="/Tables/createTableForRestaurant/@ViewBag.RestId"><button class="btn btn-success mt-1">Add</button></a>
    </div>


}


