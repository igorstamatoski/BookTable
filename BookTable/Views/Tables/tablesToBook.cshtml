@model BookTable.Models.ViewModels.TablesToBook

<h2>Tables to book</h2>

<h3>Restaurant: @Model.restaurant.Name</h3>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tables.ElementAt(0).Seats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tables.ElementAt(0).Avaliable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.tables)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Seats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avaliable)
            </td>
            <td>
                @{ if (item.Avaliable)
                    {
                        using (Html.BeginForm("makeReservation", "Reservations", new { id = item.TableId }, FormMethod.Post, new { }))
                        {
                            @Html.HiddenFor(model => model.eventId)
                            <input class="btn btn-warning" type="submit" value="Book" />
                        }
                    }
                    else
                    {
                            <input class="btn btn-danger" type="button" disabled value="Book" />
                    }
                }
            </td>
        </tr>
    }

</table>
