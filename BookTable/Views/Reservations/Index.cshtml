@model IEnumerable<BookTable.Models.DatabaseModels.Reservation>

@{
    ViewBag.Title = "Reservations";
}

@if (Model.Count() > 0)
{

<h2>Reservations</h2>

<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
            Created At
        </th>
        <th>
            Event
        </th>
        <th>
            Restaurant
        </th>
        <th>
            People
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Idto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Table.Restaurant.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Table.Seats)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ReservationId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ReservationId })
            </td>
        </tr>
    }

</table>
}
else
{
<div style="text-align:center" class="mb-5">
    <img style="width:20%" src="https://www.qatarairways.com/content/dam/images/renditions/square/icons/ancillaries/s-event-burgundy.png">
    <h3 style="color:gray">You still don't have any reservations!</h3>
    <p style="color:gray">Please check our events where you can make your first reservation!</p>
</div>
}
