@model IEnumerable<BookTable.Models.DatabaseModels.Reservation>

@{
    ViewBag.Title = "Reservations";
}

@if (Model.Count() > 0)
{

<h2>Reservations</h2>

<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
            Event
        </th>
        <th>
            Restaurant
        </th>
        <th>
            People
        </th>
        <th>
            Created At
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Idto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Table.Restaurant.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Table.Seats)
            </td>
            <td>
                @Html.Label(item.CreatedAt.ToString("dddd, dd MMMM yyyy - HH:mm", new System.Globalization.CultureInfo("en-EN")))
            </td>
            <td>
                <a class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" href="/Reservations/Delete/@item.ReservationId">Cancel</a>
            </td>
        </tr>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Your reservation wiil be canceled!</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h6>Are you sure that you want to cancel your reservation?</h6>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-secondary"  href="/Reservations/Delete/@item.ReservationId">Yes</a>
                        <button class="btn btn-danger"  data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    }

</table>
}
else
{
<div style="text-align:center" class="mb-5">
    <img style="width:20%" src="https://www.qatarairways.com/content/dam/images/renditions/square/icons/ancillaries/s-event-burgundy.png">
    <h3 style="color:gray">You don't have any reservations!</h3>
    <p style="color:gray">Please check our events where you can make your first reservation!</p>
</div>
}
