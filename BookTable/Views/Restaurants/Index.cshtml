@model IEnumerable<BookTable.Models.DatabaseModels.Restaurant>

@{
    ViewBag.Title = "Index";
}


@if (Model.Count() > 0)
{

    <h2 class="d-inline float-left">Your restaurant</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RestaurantId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RestaurantId }) |
                    <a class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" href="/Restaurants/Delete/@item.RestaurantId">Delete</a>
                    <a class="btn btn-success" href="/Tables/createTableForRestaurant/@item.RestaurantId">Add Table</a>
                </td>
            </tr>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Your restaurant wiil be deleted</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <h6>Are you sure that you want to delete your restaurant?</h6>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <a class="btn btn-danger" href="/Restaurants/Delete/@item.RestaurantId">Delete</a>
                        </div>
                    </div>
                </div>
            </div>


        }

    </table>
    <hr />
}
else
{ <div style="width:50%" class="m-auto">
        <h2>Add your restaurant!</h2>
        <p>After adding your restaurant you can create events and promote your restaurant</p>
        <a href="/Restaurants/Create"><button class="btn btn-success mt-5 mb-5">Add new</button></a>
    </div>
}


